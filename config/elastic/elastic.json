{
  "settings": {
    "index": {"mapping": {"total_fields": {"limit": 4000}}},
    "number_of_shards": 2,
    "number_of_replicas": 4,
    "highlight": {
      "max_analyzed_offset": "10000000"
    },
    "analysis": {
      "analyzer": {
        "startswith_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "dynamic_templates": [
      {
        "fulltext": {
          "match_mapping_type": "string",
          "match": "fulltext",
          "mapping": {
            "type": "text"
          }
        }
      },
      {
        "any_fields": {
          "match_mapping_type": "string",
          "mapping": {
            "type": "text",
            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      }
    ],
    "properties": {
      "plaats.label" : {
        "type" : "search_as_you_type"
      },
      "fiche": {
        "properties": {
          "sayt.titel": {
            "type": "search_as_you_type"
          },
          "sayt.beheerder": {
            "type": "search_as_you_type"
          },
          "sayt.samensteller": {
            "type": "search_as_you_type"
          },
          "sayt.trefwoord": {
            "type": "search_as_you_type"
          },
          "sayt.geografie": {
            "type": "search_as_you_type"
          },
          "sayt.agent": {
            "type": "search_as_you_type"
          },
          "datering": {
            "type": "date_range",
            "format": "yyyy||yyyyMMdd||yyyy-MM-dd||epoch_millis||date_time||date_time_no_millis"
          },
          "generated_date": {
            "type": "date",
            "format": "yyyy-MM-d||yyyy-M-dd||yyyy-M-d||yyyy-MM-dd"
          }
        }
      }
    }
  }
}